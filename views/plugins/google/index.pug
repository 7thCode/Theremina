extends ../../layout

block content
    section.content(ng-controller="AnalyticsController")
        include partial/navbar
        .row
            .col-xs-12
                div(style="font-size:2rem;color:#607D8B") #{message.google}
        .row
            .col-xs-12
                .box.box-info(flow-init)
                    .box-header.with-border
                        div
                            .box-tools.pull-right
                                button.btn.btn-xs.btn-box-tool(type='button', data-widget='collapse')
                                    i.fas.fa-minus
                    .box-body
                        .row
                            .col-xs-12
                                div(style="margin:10px;border-style: solid; border-color: #eeeeee;border-width:1px;")
                                    div(style="background-color: #eeeeee;height:3.0rem;")
                                        .flex-row(style="font-size:1.4rem;font-weight: bold;color:#6060a0;text-align:center;")
                                            div(ng-repeat="column in columnHeaders" style="width:140px;") {{column}}
                                    .flex-column(style="display:block;height:80vh;overflow-y:scroll;")
                                        .flex-row(ng-repeat="row in rows" style="justify-content:flex-start;align-items:center;")
                                            .ellipsis(ng-repeat="col in row track by $index" style="width:140px;text-align:right;user-select: text;") {{col | round}}

                    .box-footer.clearfix
                        div(ng-bind="message")