div
    .modal-header
        span.h5.modal-title #{messages.title}
    .modal-body
        .row
            .col-xs-12
                div #{messages.text}
        .row
            .col-xs-12
                include ../../../systems/common/error_message
    .modal-footer
        .row
            .col-xs-12
                .text-center(style="margin:2rem;")
                    button.btn.btn-primary(type="button",ng-click='answer()', aria-label="") #{messages.ok}
