div
    .modal-header
        span.h5.modal-title Full Restore
        span.pull-right
            button.btn.btn-box-tool(type='button', ng-click='cancel()')
                i.fa.fa-times
    .modal-body
        .row
            .col-xs-12
                p Full Restore

        .row
            .col-xs-12(style="word-wrap:break-word;word-break:break-all")
                ng-form(name="validate")
                    .row
                        .col-xs-10
                            .form-group
                                label(for="password") db password
                                span(ng-messages="validate.password.$error")
                                    span.error-message(ng-message="required") #{message.required}
                                input.form-control.no-zoom#password(ng-model="password", type="text", name='password', required)

        .row
            .col-xs-12
                include ../../../systems/common/error_message
    .modal-footer
        .row
            .col-xs-12
                .text-center(style="margin:2rem;")
                    button.btn.btn-warning(type="button", ng-click='cancel()', aria-label="") #{message.cancel}
                    button.btn.btn-primary(type="button" ,ng-click='answer();', ng-disabled="progress", aria-label="") #{message.ok}