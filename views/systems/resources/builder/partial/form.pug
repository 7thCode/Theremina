.box.box-primary(ng-show="opened")
    .box-header.with-border
        .h6(ng-bind="name")
        .well.well-sm(layout="word-wrap:break-all;") https://#{domain}/resources/render/{{userid}}/{{name}}
        .box-tools.pull-right
            button.btn.btn-box-tool(type='button', data-widget='collapse')
                i.fa.fa-minus
    .box-body
        //.row-fluid(ng-show="inner_preview")
            .col-xs-6
                div(style="width: 100%;height: 70vh;overflow:scroll;")
                    iframe#view(style="width: 100%;height: 70vh;")
            .col-xs-6
                div(ui-ace="aceOption", ng-model='resource', style="height: 70vh;")
        .row-fluid
            .col-xs-12
                div(ui-ace="aceOption", ng-model='resource', style="height: 70vh;")