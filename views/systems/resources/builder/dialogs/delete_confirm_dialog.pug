div
    .modal-header
        span.h5.modal-title #{message.delete}
        span.pull-right
            button.btn.btn-box-tool(type='button', ng-click='cancel()')
                i.fas.fa-times
    .modal-body
        .row
            .col-xs-12
                p #{message.deleteconfirmtext}
        .row
            .col-xs-12
                include ../../../../systems/common/error_message
    .modal-footer
        .row
            .col-xs-12
                .text-center(style="margin:2rem;")
                    button.btn.btn-warning(type="button", ng-click='cancel()', aria-label="") #{message.cancel}
                    button.btn.btn-primary(type="button" ,ng-click='answer();', ng-disabled="progress", aria-label="") #{message.ok}