extends ../../backoffice_layout

block content
    section.content-header
        .h5.text-gray Accounts
    section.content(ng-controller="AccountController")
        include partial/navbar
        .box.box-info
            .box-header.with-border
                div
                    .box-tools.pull-right
                        button.btn.btn-sm.btn-box-tool(type='button', data-widget='collapse')
                            i.fa.fa-minus
                include ../../systems/common/next_prev

            .box-body
                .row
                    .col-xs-12
                        div(style="margin:10px 0;border-style: solid; border-color: #eeeeee;border-width:1px;")
                            .flex-column(style="background-color: #eeeeee;height:3.0rem;")
                                .flex-row(style="font-size:1.4rem;font-weight: bold;color:#6060a0;")
                                    .ellipsis(style="width:30%;") username
                                    .ellipsis(style="width:30%;") nickname
                                    .ellipsis(style="width:30%;") create
                                    .ellipsis(style="width:10%;") show
                            .flex-column(style="display:block;height:50vh;overflow-y:scroll;")
                                .flex-row(ng-repeat="account in accounts" ng-style="{'background-color': ($index % 2 === 0 ? '#ddddff':'#ffffff')}" style="justify-content:flex-start;align-items:center;")
                                    .ellipsis(style="width:30%;user-select: text;") {{account.username}}
                                    .ellipsis(style="width:30%;user-select: text;") {{account.local.nickname}}
                                    .ellipsis(style="width:30%;user-select: text;") {{account.create | date: short}}
                                    td(style="width:10%;")
                                        .box-tools.pull-right
                                            button.btn.btn-box-tool(type='button', ng-click="Open(account);")
                                                i.fa.fa-eye

                //.table-responsive(style="height:70vh;overflow:scroll;")
                    table.table.table-striped
                        thead
                            tr
                                th username
                                th nickname
                                th create
                        tbody
                            tr.gradeX(ng-repeat="account in accounts")
                                td {{account.username}}
                                td {{account.local.nickname}}
                                td {{account.create | date: short}}
                                td
                                    .box-tools.pull-right
                                        button.btn.btn-box-tool(type='button', ng-click="Open(account);")
                                            i.fa.fa-eye

            .box-footer.clearfix
                div(ng-bind="message")