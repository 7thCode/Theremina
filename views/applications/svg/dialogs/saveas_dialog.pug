.modal-content
    .modal-header
        span.h5.modal-title #{message.save}
        span.pull-right
            button.btn.btn-xs.btn-box-tool(type='button',ng-click='cancel()')
                i.fa.fa-times
    .modal-body
        .row
            .col-xs-12(style="word-wrap:break-word;word-break:break-all")
                ng-form(name="validate")
                    .form-group
                        label.control-label(for="title") #{message.title}
                        span(ng-messages="validate.title.$error")
                            span.error-message(ng-message="required") #{message.required}
                            span.error-message(ng-message="maxlength") #{message.long}
                        input.form-control.no-zoom#title(ng-model="title", type="text", name='title', required, ng-maxlength="50")
            .col-xs-12
                include ../../../systems/common/error_message

    .modal-footer
        .row
            .col-xs-12
                .text-center(style="margin:2rem;")
                    button.btn.btn-warning(type="button", ng-click='cancel();', aria-label="") #{message.cancel}
                    button.btn.btn-primary(type="button" ,ng-click='answer();', ng-disabled="progress || validate.$invalid", aria-label="") #{message.ok}