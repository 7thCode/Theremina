.box.box-info.pallete-shadow(ng-controller="PhotoController", flow-init, draggablepane="image", style="width:270px;height:auto;left:230px;top:210px;background:#f0f0f0;")
    .box-header.with-border
        .row
            .col-xs-12
                div
                    .box-tools.pull-right
                        button.btn.btn-xs.btn-box-tool(type='button', data-widget='collapse')
                            i.fa.fa-minus
                div
                    .box-tools.pull-right(flow-name="uploader.flow", flow-files-added="createPhoto($files);")
                        button.btn.btn-xs.btn-box-tool(flow-btn type="file", flow-attrs="{accept:'.png,.jpg,.gif,.svg'}")
                            i.fa.fa-plus-circle.text-primary
        .row
            .col-xs-12
                include ../../../systems/common/next_prev

                div(ng-controller="NamespacesController")
                    select.form-control#namespace(name="namespace", ng-model="namespace", ng-options="name for name in namespaces", ng-change="SetNamespace(namespace)")


    .box-body(style="background-color:#f0f0f0; box-shadow: 1px 1px 4px 1px rgba(0,0,0,0.3) inset" flow-drop)
        ul.nav.nav-pills.draggable-objects(ng-cloak, style="min-height:120px")
            li(ng-repeat="file in files")
                div(ng-if="Type(file.metadata.type) == 'image'",ng-class="{selected: hover}", ng-mouseenter="hover = true", ng-mouseleave="hover = false", style="height:8rem;width:8rem;margin-left:auto;margin-right:auto;")
                    button.btn.btn-danger.btn-xs(ng-click="deletePhoto(file.filename);", style="position:relative;top:10px;left:1rem;border-radius: 10px")
                        i.fa.fa-ban(aria-hidden="true")
                    button.btn.btn-success.btn-xs(ng-click="editPhoto(file.filename);", style="position:relative;top:10px;left:3rem;border-radius: 10px")
                        i.fa.fa-pencil(aria-hidden="true")
                    div(style="height:4rem;")
                            img.center-block.thumbnail(ng-drag="true" ng-drag-data="obj" data-allow-transform="true", ng-src="/{{file.metadata.userid}}/{{namespace}}/doc/img/{{file.filename}}" , style="max-height:4rem;max-width:4rem;border: 1px #404040 solid;")
                    div(style="height:2rem;text-align:center;")
                        div(style="word-wrap: break-word;font-size:1rem;" ng-bind="file.filename | filename:10")

