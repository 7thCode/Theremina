nav.navbar.navbar-default.navbar-fixed-top.shadow(role="navigation")
    .container-fluid.noto
        .navbar-header
            button.btn-primary.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-navbar')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand.page-scroll(href="/", ng-click="go('/')") ページ
        #bs-navbar.navbar-collapse.collapse
            ul.nav.navbar-nav
                if user
                    li.dropdown
                        a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                            | ファイル
                        ul.dropdown-menu(role="menu")
                            li
                                a(href="#", ng-click="Create();", role="menuitem") 作成
                            //li
                                a(href="", ng-click="Open();") 開く...
                            li(ng-class="{disabled: !opened}")
                                a(href="", ng-click="opened && Update();", role="menuitem") 保存
                            li.divider
                            li(ng-class="{disabled: !opened}" )
                                a(href="", ng-click="opened && Delete();", role="menuitem") 削除
                    li.dropdown
                        a.dropdown-toggle(ng-class="{disabled: !opened}", href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                            | 編集
                        ul.dropdown-menu(role="menu")
                            li
                                a(href="#", ng-click="Undo();", role="menuitem") 戻す

                    li.dropdown
                        a.dropdown-toggle(ng-class="{disabled: !opened}", href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                            | テンプレート
                        ul.dropdown-menu(role="menu")
                            li(ng-repeat="template in templates")
                                a(href="#", ng-click="Paste(template._id);", role="menuitem") {{template.name}}
                            li.divider
                    li.dropdown
                        a.dropdown-toggle(ng-class="{disabled: !opened}",href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                            | プレビュー
                        ul.dropdown-menu(role="menu")
                            li
                                a(href="#", ng-click="OpenPreview();", role="menuitem") 開く