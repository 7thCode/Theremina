.box.box-info(flow-init)
    .box-header.with-border
        div
            .box-tools.pull-right
                button.btn.btn-box-tool(type='button', data-widget='collapse')
                    i.fa.fa-minus
        div
            .box-tools.pull-right(flow-name="uploader.flow", flow-files-added="createPhoto($files);")
                button.btn.btn-box-tool(flow-btn type="file")
                    i.fa.fa-2x.fa-plus-circle.text-primary

        include ../../../systems/common/next_prev

    .box-body(style="height:auto;min-height:80vh;background-color:#e0e5f0; box-shadow: 1px 1px 4px 1px rgba(0,0,0,0.3) inset" flow-drop, data-toggle="tooltip" data-placement="top" title="画像をドロップしてください。")
        ul.nav.nav-pills.draggable-objects(ng-cloak, style="min-height:120px")
            li(ng-repeat="file in files")
                div(ng-if="Type(file.metadata.type) == 'image'", ng-class="{selected: hover}", ng-mouseenter="hover = true", ng-mouseleave="hover = false", style="height:12rem;width:16rem;margin-left:auto;margin-right:auto;")
                    button.btn.btn-danger.btn-xs(ng-click="deletePhoto(file.filename);", style="position:relative;top:10px;left:10px;border-radius: 10px") x
                    div(style="height:8rem;",data-toggle="tooltip" data-placement="top" title="{{file.filename}}")
                        img.center-block.thumbnail(ng-src="/photos/api/" + '{{file.metadata.userid}}' + "/" + '{{file.filename}}', style="height:8rem;box-shadow: 1px 1px 5px 1px rgba(0,0,0,0.3)")
                    div(style="height:8rem;text-align:center;")
                        .row
                            .col-xs-12
                                div(style="word-wrap: break-word;", ng-bind="file.filename | filename:10")

                div(ng-if="Type(file.metadata.type) != 'image'", ng-class="{selected: hover}", ng-mouseenter="hover = true", ng-mouseleave="hover = false", style="height:12rem;width:16rem;margin-left:auto;margin-right:auto;")
                    button.btn.btn-danger.btn-xs(ng-click="deletePhoto(file.filename);", style="position:relative;top:10px;left:10px;border-radius: 10px") x
                    div(style="height:8rem;",data-toggle="tooltip" data-placement="top" title="{{file.filename}}")
                        a(download ng-href="/files/api/" + '{{file.metadata.userid}}' + "/" + '{{file.filename}}' target="_blank")
                            img.center-block.thumbnail(ng-src="{{file.metadata.type | icon}}", style="max-height: 8rem;max-width: 12rem;box-shadow: 1px 1px 5px 1px rgba(0,0,0,0.3)")
                    div(style="height:8rem;text-align:center;")
                        .row
                            .col-xs-12
                                div(style="word-wrap: break-word;", ng-bind="file.filename | filename:10")