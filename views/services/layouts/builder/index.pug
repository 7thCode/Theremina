extends ../../../backoffice_layout

block content
    section.content-header
        .h5.text-gray #{message.builder}
    section.content(ng-controller="BuilderController")
        include partial/navbar
        .row
            .col-xs-12
                div(style="font-size:2rem;color:#607D8B") #{message.layouts}
        .row
            .col-xs-12#draggable_area
                include partial/canvas

        div
            include partial/images
            include partial/mode
            include partial/attribute

        div(ng-bind="message")