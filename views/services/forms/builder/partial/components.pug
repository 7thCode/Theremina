.box.box-info.pallete-shadow.pallete-background(draggablepane="component", style="width:40vw;height:auto;left:240px;top:210px;")
    .box-header.with-border#box-header
        .h6 Add Components
        .box-tools.pull-right
            button.btn.btn-xs.btn-box-tool(type='button', data-widget='collapse')
                i.fas.fa-minus
    .box-body
        .row
            .col-xs-12
                .btn-group.text-center(role="group",style="width:100%;")
                    button.btn.btn-app(ng-click="addTag();")
                        i.fas.fa-question-circle
                        span.hidden-xs.hidden-sm  #{message.tag}
                    button.btn.btn-app(ng-click="addHtml();")
                        i.fas.fa-align-justify
                        span.hidden-xs.hidden-sm  #{message.html}
                    button.btn.btn-app(ng-click="addDiv();")
                        i.fas.fa-code
                        span.hidden-xs.hidden-sm  #{message.div}
                    button.btn.btn-app(ng-click="addField();")
                        i.fas.fa-font
                        span.hidden-xs.hidden-sm  #{message.field}
                    button.btn.btn-app(ng-click="addHtmlField();")
                        i.fas.fa-font
                        span.hidden-xs.hidden-sm  #{message.html}
                    button.btn.btn-app(ng-click="addTextArea();")
                        i.fas.fa-align-justify
                        span.hidden-xs.hidden-sm  #{message.textarea}
                    button.btn.btn-app(ng-click="addHtmlArea();")
                        i.fas.fa-align-justify
                        span.hidden-xs.hidden-sm  #{message.htmlarea}
                    button.btn.btn-app(ng-click="addNumber();")
                        i.fas.fa-sort-numeric-asc
                        span.hidden-xs.hidden-sm  #{message.number}
                    button.btn.btn-app(ng-click="addDate();")
                        i.fas.fa-calendar
                        span.hidden-xs.hidden-sm  #{message.date}
                    button.btn.btn-app(ng-click="addImg();")
                        i.fas.fa-picture-o
                        span.hidden-xs.hidden-sm  #{message.img}
                    button.btn.btn-app(ng-click="addSelect();")
                        i.fas.fa-th-list
                        span.hidden-xs.hidden-sm  #{message.select}
                    button.btn.btn-app(ng-click="addChack();")
                        i.fas.fa-check-square-o
                        span.hidden-xs.hidden-sm  #{message.check}
                    button.btn.btn-app(ng-click="addChips();")
                        i.fas.fa-tag
                        span.hidden-xs.hidden-sm #{message.chips}