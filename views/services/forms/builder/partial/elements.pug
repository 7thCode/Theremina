.box.box-info
    .box-header
        .h6 #{message.element}
        //.box-tools.pull-right
            button.btn.btn-xs.btn-box-tool(type='button', data-widget='collapse')
                i.fas.fa-minus
        .row
            .col-xs-12.text-center
                .btn-group(role="group",style="width:100%;")
                    button.btn.btn-sm.btn-primary(ng-click="up();", style="width:33%;")
                        i.fas.fa-chevron-up
                        span.hidden-xs.hidden-sm.hidden-md #{message.up}
                    button.btn.btn-sm.btn-info(ng-click="down();", style="width:34%;")
                        i.fas.fa-chevron-down
                        span.hidden-xs.hidden-sm.hidden-md #{message.down}
                    button.btn.btn-sm.btn-danger(ng-click="delete();", style="width:33%;")
                        i.fas.fa-trash
                        span.hidden-xs.hidden-sm.hidden-md #{message.delete}
        .row
            .col-xs-12.text-center
                button.btn.btn-sm.btn-secondaly(ng-click="deselect();", style="width:100%;")
                    i.fas.fa-check
                    span.hidden-xs.hidden-sm.hidden-md #{message.select_root}
        .row(flow-init)
            .col-xs-12.text-center(flow-name="uploader.flow", flow-files-added="UploadForms($files);")
                button.btn.btn-sm.btn-success(flow-btn type="file", style="width:100%;")
                    i.fas.fa-plus-circle
                    span.hidden-xs.hidden-sm.hidden-md Upload
    .box-body
        .row
            .col-xs-12
                div(style="height:70vh;overflow:scroll")
                    table.table.table-striped
                        tr(ng-repeat="element in current_page")
                            td.row(ng-class="{selected: hover  || ElementSelected(element.id)}" ng-mouseenter="hover = true" ng-mouseleave="hover = false" ng-click="ElementSelect(element.id);")
                                .col-xs-4(ng-bind="element.type")
                                .col-xs-4(ng-bind="element.id")
                                .col-xs-4
                                    button.btn.btn-sm.btn-primary(ng-click="ElementOpen(element.id);")
                                        i.fas.fa-chevron-up
